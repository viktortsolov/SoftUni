@model BecomeDealerFormModel

@{
    ViewData["Title"] = "Become Dealer";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="text-center">Become Dealer</h2>

            <form method="post">
              <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Your name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
              </div>

              <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Your phone number...">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
              </div>

              <input class="btn btn-primary text-center mt-3" type="submit" value="Save"/>
            </form>
        </div>
    </div>
</div>